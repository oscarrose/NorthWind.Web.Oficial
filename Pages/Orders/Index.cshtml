@page
@model Northwind.WebUI.Pages.Orders.IndexModel
@{
}

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Orders</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css">*@
</head>

<body>
    <h1>@ViewData["Title"]</h1>

    @*Para el button de buscar*@
    <nav class="navbar navbar-expand-lg ">
        <div ="container-fluid">
            <form class="d-flex">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>

        </div>
    </nav>
    @*Aqui termina el button de search*@


    @*Para capa title de las columnas*@
    <div id="wrapper-header">
        <table class="table table-striped table-hover orders-table id="orders-table">
            <thead class="table-dark">

                <tr>
                    <th class="ColmOrderID">Order ID</th>
                    <th class="ColmCustomerID">Customer ID</th>
                    <th class="ColmEmployeeID">Employee ID</th>

                    <th class="ColmOrderDate">Order Date</th>
                    <th class="ColmRequiredDate">Required Date</th>
                    <th class="ColmShippedDate">Shipped Date</th>
                    <th class="ColmShipVia">Ship Via</th>
                    <th class="ColmFreight">Freight</th>

                    <th class="ColmShipName">Ship Name</th>
                    <th class="ColmShipAddress">Ship Address</th>
                    <th class="ColmShipCity">Ship City</th>
                    <th class="ColmShipRegion">Ship Region</th>
                    <th class="ColmPostalCode">Ship Postal Code</th>
                    <th class="ColmShipCountry">Ship Country</th>

                </tr>

            </thead>

            <tbody>
                @*@foreach (var item in Model.Orders)
                {
                    <tr>

                        <td>@item.OrderID</td>
                    </tr>


                }*@


            </tbody>
        </table>

    </div>
    @*Aqui termina para el title de la culumna*@


</body>

</html>